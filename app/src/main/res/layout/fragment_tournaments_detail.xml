<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TournamentsDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#CEEDE6"
        app:layout_constraintBottom_toBottomOf="parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineIzq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineDer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineAbajo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:background="#83D6C2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <!--Torneo Padel -->

        <ImageView
            android:id="@+id/flyer"
            android:layout_width="73dp"
            android:layout_height="67dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/torneo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="197dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="Torneo de Padel"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view" />

        <!--card contenedora de iconos de texto primer columna-->

    <ImageView
        android:id="@+id/icoClub"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineIzq"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:srcCompat="@drawable/club" />
        <TextView
            android:id="@+id/textClub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Club"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzq" />
            <TextView
                android:id="@+id/club"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chacarita"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
                app:layout_constraintTop_toBottomOf="@+id/textClub" />

    <ImageView
        android:id="@+id/icoDireccion"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineIzq"
        app:layout_constraintTop_toBottomOf="@+id/icoClub"
        app:srcCompat="@drawable/baseline_location_on_24" />
        <TextView
            android:id="@+id/textDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="54dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
            app:layout_constraintTop_toBottomOf="@+id/textClub" />
            <TextView
                android:id="@+id/direccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calle falsa 123"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
                app:layout_constraintTop_toBottomOf="@+id/textDireccion" />
            <TextView
                android:id="@+id/localidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Springfield"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
                app:layout_constraintTop_toBottomOf="@+id/direccion" />

    <ImageView
        android:id="@+id/icoCalendar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineIzq"
        app:layout_constraintTop_toBottomOf="@+id/icoDireccion"
        app:srcCompat="@drawable/baseline_calendar_month_24" />
        <TextView
            android:id="@+id/textFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="58dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
            app:layout_constraintTop_toBottomOf="@+id/textDireccion" />
            <TextView
                android:id="@+id/fechaTorneo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24/11/2023"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
                app:layout_constraintTop_toBottomOf="@+id/textFecha" />

    <ImageView
        android:id="@+id/icoReloj"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineDer"
        app:layout_constraintTop_toBottomOf="@+id/icoDireccion"
        app:srcCompat="@drawable/baseline_access_time_24" />
        <TextView
            android:id="@+id/textHorario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Horario"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="250dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineDer"
            app:layout_constraintTop_toTopOf="@+id/view" />
            <TextView
                android:id="@+id/horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="20:22Hs"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guidelineDer"
                app:layout_constraintTop_toBottomOf="@+id/textHorario" />


    <ImageView
        android:id="@+id/icoMaterialDeCancha"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineIzq"
        app:layout_constraintTop_toBottomOf="@+id/icoCalendar"
        app:srcCompat="@drawable/baseline_sports_tennis_24" />
        <TextView
            android:id="@+id/textCancha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Material Cancha"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="53dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
            app:layout_constraintTop_toTopOf="@+id/fechaTorneo" />
            <TextView
                android:id="@+id/cancha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pasto sintético"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
                app:layout_constraintTop_toBottomOf="@+id/textCancha"  />

    <ImageView
        android:id="@+id/icoCupo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineIzq"
        app:layout_constraintTop_toBottomOf="@+id/icoMaterialDeCancha"
        app:srcCompat="@drawable/baseline_people_24" />
        <TextView
            android:id="@+id/textCupos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Cupos"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="53dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
            app:layout_constraintTop_toTopOf="@+id/cancha" />
            <TextView
                android:id="@+id/cupos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="28"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
                app:layout_constraintTop_toBottomOf="@+id/textCupos" />

    <ImageView
        android:id="@+id/icoPremio"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineIzq"
        app:layout_constraintTop_toBottomOf="@+id/icoCupo"
        app:srcCompat="@drawable/premio" />
        <TextView
            android:id="@+id/textPremio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Premio"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="53dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
            app:layout_constraintTop_toTopOf="@+id/cupos" />
            <TextView
                android:id="@+id/textoPremio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="73dp"
                android:text="$3500"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textPremio" />

        <ImageView
            android:id="@+id/icoCategoria"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="38dp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineIzq"
            app:layout_constraintTop_toBottomOf="@+id/icoPremio"
            app:srcCompat="@drawable/baseline_account_tree_24" />
            <TextView
                android:id="@+id/textCategoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Categoría"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="53dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
                app:layout_constraintTop_toTopOf="@+id/textoPremio" />
                <TextView
                    android:id="@+id/categoria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="C1"
                    android:textColor="#666666"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
                    app:layout_constraintTop_toBottomOf="@+id/textCategoria" />

    <ImageView
        android:id="@+id/icoCosto"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="38dp"
        app:layout_constraintEnd_toStartOf="@+id/guidelineIzq"
        app:layout_constraintTop_toBottomOf="@+id/icoCategoria"
        app:srcCompat="@drawable/baseline_monetization_on_24" />
        <TextView
            android:id="@+id/textCostoInscripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Costo de Inscripción"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="53dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
            app:layout_constraintTop_toTopOf="@+id/categoria" />
            <TextView
                android:id="@+id/textCosto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$2000"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
                app:layout_constraintTop_toBottomOf="@+id/textCostoInscripcion" />



    <ImageView
        android:id="@+id/icoContacto"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="38dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineAbajo"
        app:layout_constraintEnd_toStartOf="@+id/guidelineIzq"
        app:layout_constraintTop_toBottomOf="@+id/icoCosto"
        app:srcCompat="@drawable/baseline_account_circle_24" />
        <TextView
            android:id="@+id/textCoordinador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Coordinador"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="53dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineIzq"
            app:layout_constraintTop_toTopOf="@+id/textCosto" />
            <TextView
                android:id="@+id/detail_coor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="73dp"
                android:text="Alberto"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textCoordinador" />

    <ImageView
        android:id="@+id/icoTelefono"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="38dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineAbajo"
        app:layout_constraintEnd_toStartOf="@+id/guidelineDer"
        app:layout_constraintTop_toBottomOf="@+id/icoCosto"
        app:srcCompat="@drawable/baseline_phone_android_24" />
        <TextView
            android:id="@+id/textTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Teléfono"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="53dp"
            app:layout_constraintStart_toStartOf="@+id/guidelineDer"
            app:layout_constraintTop_toTopOf="@+id/textCosto" />
            <TextView
                android:id="@+id/detail_coor_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="+5491125794876"
                android:textColor="#666666"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guidelineDer"
                app:layout_constraintTop_toBottomOf="@+id/textTelefono" />


    <ImageButton
        android:id="@+id/btnMapa"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/mapafinal"
        android:onClick="openLocationOnMap"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnWhatsapp"
        app:layout_constraintHorizontal_bias="0.69"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineAbajo"
        app:layout_constraintWidth_default="spread"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnInfo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/infodef"
        android:onClick="mostrarInformacion"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineAbajo"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/btnWhatsapp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/ic_whatsapp"
        android:onClick="enviarMensajeWhatsapp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineAbajo"
        tools:ignore="SpeakableTextPresentCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>