<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    android:id="@+id/item_torneo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    app:cardBackgroundColor="#B0D8CE"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp"
    xsi:schemaLocation="http://schemas.android.com/apk/res-auto ">

    <TextView
        android:id="@+id/tournament_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Torneo La Paleta Loca"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout" />


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flyer"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            app:srcCompat="@drawable/paleta" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="35"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="90dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="20dp"
                    android:text="Club:"
                    android:textColor="#5C5B5B"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="90dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:text="Categoria:"
                    android:textColor="#5C5B5B"
                    android:textAlignment="viewStart" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="70dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:text="Fecha:"
                    android:textColor="#5C5B5B"
                    android:textAlignment="viewStart"
                    app:layout_constraintEnd_toStartOf="@+id/tournament_date"
                    app:layout_constraintHorizontal_bias="0.814"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="70dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:text="Hora:"
                    android:textColor="#5C5B5B"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="85dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:text="Coordinador:"
                    android:textColor="#5C5B5B"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="70dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:text="TelÃ©fono:"
                    android:textColor="#5C5B5B"
                    android:textAlignment="viewStart" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_weight="60"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tournament_club_nombre"
                    android:layout_width="170dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="20dp"
                    android:text="River"
                    android:textColor="#5C5B5B"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"/>

                <TextView
                    android:id="@+id/tournament_category"
                    android:layout_width="170dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:text="C4"
                    android:textColor="#5C5B5B"
                    android:textStyle="bold"
                    android:textAlignment="viewStart" />


                <TextView
                    android:id="@+id/tournament_date"
                    android:layout_width="170dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:text="23/05/2023"
                    android:textColor="#5C5B5B"
                    android:textStyle="bold"
                    android:textAlignment="viewStart" />


                <TextView
                    android:id="@+id/tournament_hour"
                    android:layout_width="170dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:text="22:00"
                    android:textColor="#5C5B5B"
                    android:textStyle="bold"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/tournament_name"
                    android:layout_width="170dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:text="Jorge Matinez"
                    android:textColor="#5C5B5B"
                    android:textStyle="bold"
                    android:textAlignment="viewStart" />


                <TextView
                    android:id="@+id/tournament_phone"
                    android:layout_width="170dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="15dp"
                    android:text="(011) 4562-5289"
                    android:textColor="#5C5B5B"
                    android:textStyle="bold"
                    android:textAlignment="viewStart" />


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</com.google.android.material.card.MaterialCardView>